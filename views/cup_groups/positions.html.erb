<h2><%= I18n.t('.positions.title') %></h2>
<div class="row">
  <div class="col-md-8">
    <% groups.each do |group| %>
      <div class="panel panel-success">
        <div id="group-<%= group.name.downcase %>" class="panel-heading">
          <h3 class="panel-title"><%= "#{I18n.t('.common.group')} #{group.name}" %></h3>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover position-table">
            <thead>
              <tr>
                <th><%= I18n.t('.positions.headers.pos') %></th>
                <th><%= I18n.t('.positions.headers.team') %></th>
                <th><%= I18n.t('.positions.headers.points') %></th>
                <th><%= I18n.t('.positions.headers.played') %></th>
                <th><%= I18n.t('.positions.headers.won') %></th>
                <th><%= I18n.t('.positions.headers.draw') %></th>
                <th><%= I18n.t('.positions.headers.lost') %></th>
                <th><%= I18n.t('.positions.headers.goals') %></th>
                <th><%= I18n.t('.positions.headers.goals_against') %></th>
                <th><%= I18n.t('.positions.headers.goal_difference') %></th>
              </tr>
            </thead>
            <tbody>
              <% group.positions_table.each_with_index do |position, index| %>
                <tr>
                  <td class="position-column">
                    <span class="label label-<%= class_for_index(index) %>">#<%= index + 1 %></span>
                  </td>
                  <td class="team-column">
                    <span><img class="flag" src="/img/flags/<%= position.team.flag %>"></span>
                    <span class="team-name"><%= position.team.name %></span>
                  </td>
                  <td class="points-column">
                    <%= position.points %>
                  </td>
                  <td class="played-column">
                    <%= position.won + position.lost + position.tied %>
                  </td>
                  <td class="won-column">
                    <%= position.won %>
                  </td>
                  <td class="draw-column">
                    <%= position.tied %>
                  </td>
                  <td class="lost-column">
                    <%= position.lost %>
                  </td>
                  <td class="goals-column">
                    <%= position.goals %>
                  </td>
                  <td class="goals-against-column">
                    <%= position.received_goals %>
                  </td>
                  <td class="goal-difference-column">
                    <%= position.values[:diff] %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    <% end %>
  </div>
  <div id="positions-legend" class="col-md-4">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title"><%= I18n.t('.positions.legend.title') %></h3>
      </div>
      <div class="panel-body">
        <table>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.points') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.points') %></td>
          </tr>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.played') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.played') %></td>
          </tr>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.won') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.won') %></td>
          </tr>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.draw') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.draw') %></td>
          </tr>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.lost') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.lost') %></td>
          </tr>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.goals') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.goals') %></td>
          </tr>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.goals_against') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.goals_against') %></td>
          </tr>
          <tr>
            <td><strong><%= I18n.t('.positions.headers.goal_difference') %>:</strong></td>
            <td><%= I18n.t('.positions.legend.goal_difference') %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
