<h2>Positions</h2>
<div class="row">
  <div class="col-md-8">
    <% groups.each do |group| %>
      <div class="panel panel-success">
        <div id="group-<%= group.name.downcase %>" class="panel-heading">
          <h3 class="panel-title">Group <%= group.name %></h3>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-hover position-table">
            <thead>
              <tr>
                <th>Pos</th>
                <th>Team</th>
                <th>Pts</th>
                <th>P</th>
                <th>W</th>
                <th>D</th>
                <th>L</th>
                <th>G</th>
                <th>GA</th>
                <th>GD</th>
              </tr>
            </thead>
            <tbody>
              <% group.positions_table.each_with_index do |position, index| %>
                <tr>
                  <td class="position-column">
                    <span class="label label-<%= class_for_index(index) %>">#<%= index + 1 %></span>
                  </td>
                  <td class="team-column">
                    <span><img class="flag" src="/img/flags/<%= position.team.flag %>"></span>
                    <span class="team-name"><%= position.team.name %></span>
                  </td>
                  <td class="points-column">
                    <%= position.points %>
                  </td>
                  <td class="played-column">
                    <%= position.won + position.lost + position.tied %>
                  </td>
                  <td class="won-column">
                    <%= position.won %>
                  </td>
                  <td class="draw-column">
                    <%= position.tied %>
                  </td>
                  <td class="lost-column">
                    <%= position.lost %>
                  </td>
                  <td class="goals-column">
                    <%= position.goals %>
                  </td>
                  <td class="goals-against-column">
                    <%= position.received_goals %>
                  </td>
                  <td class="goal-difference-column">
                    <%= position.values[:diff] %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <div class="panel panel-warning">
      <div class="panel-heading">
        <h3 class="panel-title">Cheat sheet</h3>
      </div>
      <div class="panel-body">
        <strong>Pts:</strong><span>total points</span>
        <br>
        <strong>P:</strong><span>played matches</span>
        <br>
        <strong>W:</strong><span>total won</span>
        <br>
        <strong>D:</strong><span>total draw</span>
        <br>
        <strong>L:</strong><span>total lost</span>
        <br>
        <strong>G:</strong><span>total goals</span>
        <br>
        <strong>GA:</strong><span>total goals against</span>
        <br>
        <strong>GD:</strong><span>total goal difference</span>
      </div>
    </div>
  </div>
</div>
