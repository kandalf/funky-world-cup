<h2><%= I18n.t("admin.dashboard.title") %></h2>
<div id="admin-dashboard-counts" class="row">
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= I18n.t('admin.dashboard.user_count') %></h3>
      </div>
      <div class="panel-body text-primary">
        <%= users %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= I18n.t('admin.dashboard.group_count') %></h3>
      </div>
      <div class="panel-body text-success">
        <%= groups %>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= I18n.t('admin.dashboard.prediction_count') %></h3>
      </div>
      <div class="panel-body text-warning">
        <%= predictions %>
      </div>
    </div>
  </div>
  <div class="clearfix"></div>
</div>
<div class="clearfix"></div>
<div id="admin-dashboard-matches" class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= I18n.t('admin.dashboard.matches') %></h3>
  </div>
  <div class="panel-body text-warning">
    <table class="table table-striped table-hover matches-table">
      <tbody>
        <% matches.each do |match| %>
          <%= render("views/admin/_match.html.erb", match: match) %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="clearfix"></div>
<%= render("views/admin/_edit_modal.html.erb", id: current_user.id) %>
