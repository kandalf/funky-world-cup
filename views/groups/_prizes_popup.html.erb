<div class="modal fade" id="group-<%= group.id %>-prizes">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= I18n.t('.prizes.title') %></h5>
        <button type="button" class="close modal-close" data-dismiss="modal" aria-hidden="true">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if group.group_prizes.any? %>
          <table class="table table-striped">
            <% group.group_prizes.each do |prize| %>
              <tr>
                <td>#<%= prize.order %></td>
                <td>#<%= prize.name %></td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p><%= I18n.t('.prizes.no_prizes') %></p>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default modal-close btn-block" data-dismiss="modal"><%= I18n.t('.actions.close') %></button>
      </div>
    </div>
  </div>
</div>

