<div id="home-description">
  <div class="col-md-4 col-md-offset-2">
    <img id="wc-logo" src="/img/2014.jpg"/> 
  </div>
  <div id="login" class="col-md-4">
    <h3 class="page-header"><%= I18n.t('groups.join.title', name: group.name) %></h3>
    <p><%= I18n.t('groups.join.description') %></p>
    <% if current_user %>
      <h4 class="page-header"><%= I18n.t('groups.join.join') %></h4>
      <div class="text-center">
        <form action="/groups/join/<%= group.link %>" method="post">
          <input type="hidden" name="_method" value="put">
          <button type="submit" class="btn btn-success"><%= I18n.t('groups.join.join_group', name: group.name) %></submit>
        </form>
      </div>
    <% else %>
      <h4 class="page-header"><%= I18n.t('groups.join.login_join') %></h4>
      <div class="col-md-2"></div>
      <div id="twitter-link" class="col-md-4 social-link">
        <a href="/auth/twitter">
          <img src="/img/twitter.jpg" width="64" height="64" />
        </a>
      </div>
      <div id="facebook-link" class="col-md-4 social-link">
        <a href="/auth/facebook">
          <img src="/img/facebook.jpg" width="64" height="64"/>
        </a>
      </div>
      <div class="col-md-2"></div>
    <% end %>
  </div>
</div>

